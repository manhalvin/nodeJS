    <div class="pagination">
        <% if (page> 1) { %>
            <a href="/users?page=<%= page - 1 %>">&laquo;
                Previous</a>
            <% } %>

                <% for (let i=1; i <=pages; i++) { %>
                    <% if (i===page) { %>
                        <span class="active">
                            <%= i %>
                        </span>
                        <% } else { %>
                            <a href="/users?page=<%= i %>">
                                <%= i %>
                            </a>
                            <% } %>
                                <% } %>

                                    <% if (page < pages) { %>
                                        <a href="/users?page=<%= page + 1 %>">Next
                                            &raquo;</a>
                                        <% } %>
    </div>
</div>