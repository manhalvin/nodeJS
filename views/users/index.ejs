<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container col-8 mt-5">
    <a href="/users/create" class="btn btn-success m-2">Thêm</a>
    <a href="/auth/login" class="btn btn-success m-2">Đăng nhập</a>
    <div class="aler alert-success">
        Hello <%= name %> !
    </div>
    <table class="table table-bordered">
        <tr>
            <th>id</th>
            <th>Tên</th>
            <th>Email</th>
            <th>Status</th>
            <th>Avatar</th>
            <th>Quản lý</th>
        </tr>
        <% for (let user of users ) { %>
            <tr>
                <td>
                    <%= user.id %>
                </td>
                <td>
                    <%= user.name %>
                </td>
                <td>
                    <%= user.email %>
                </td>
                <td>
                    <%= user.status==1 ? "Kích hoạt" : "Vô hiệu hóa" %>
                </td>
                <td>
                    <img src="<%= user.file_path %>" alt="">
                </td>
                <td>
                    <a href="/users/edit/<%= user.id %>" class="btn btn-secondary">Sửa</a>
                    <a href="/users/delete/<%= user.id %>" class="btn btn-secondary">Xóa</a>
                </td>
            </tr>
            <% } %>
    </table>

