<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <a href="/users/" class="btn btn-success m-2">Danh sách</a>
    <form class="col-6 border border-dark rounded p-3
                            m-auto" action="/users/store" method="POST" enctype="multipart/form-data">
        <div class="form-group mb-3">
            <label for="name">Tên</label>
            <input class="form-control bg-info" name="name" id="name" value="<%= name %>">
            <% if (errors && errors.name) { %>
                <span class="error badge bg-danger mt-2">
                    <%= errors.name.msg %>
                </span><br>
                <% } %>
        </div>
        <div class="form-group mb-3">
            <label for="email">Email</label>
            <input class="form-control bg-primary" name="email" id="email" value="<%= email %>">
            <% if (errors && errors.email) { %>
                <span class="error badge bg-danger mt-2">
                    <%= errors.email.msg %>
                </span><br>
                <% } %>
        </div>
        <div class="form-group mb-3">
            <label for="password">Password</label>
            <input class="form-control bg-primary" name="password" id="password" type="password">
            <% if (errors && errors.password) { %>
                <span class="error badge bg-danger mt-2">
                    <%= errors.password.msg %>
                </span><br>
                <% } %>
        </div>
        <div class="form-group mb-3">
            <label for="confirm_password">Xác nhận mật khẩu</label>
            <input class="form-control bg-primary" name="confirm_password" id="confirm_password" type="password">
            <% if (errors && errors.confirm_password) { %>
                <span class="error badge bg-danger mt-2">
                    <%= errors.confirm_password.msg %>
                </span><br>
                <% } %>
        </div>
        <div class="form-group mb-3">
            <label for="file">Avatar</label>
            <input class="form-control bg-primary" name="file" id="file" type="file">
            <% if (errors && errors.file) { %>
                <span class="error badge bg-danger mt-2">
                    <%= errors.file.msg %>
                </span><br>
                <% } %>
        </div>
        <div class="form-group mb-3">
            <label>Trạng thái</label> <br>
            <input type="radio" name="status" value="1" <%=(status==1)? "checked" :"" %>> Kích hoạt
            <input type="radio" name="status" value="0" <%=(status==0)? "checked" :"" %>> Vô hiệu hóa
        </div>
        <div class="form-group mt-3 ">
            <button type="submit" class="btn btn-dark px-4
                                    py-2 text-white"> Submit </button>
        </div>
    </form>
</div>