<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet">
<div class="container mt-5">
    <a href="/users/" class="btn btn-success m-2">Danh sách</a>
    <form action="/auth/login" method="POST" class="col-6 border border-dark rounded p-3 m-auto">
        <div class="form-group mb-3">
            <label for="email">Email</label>
            <input type="email" class="form-control bg-info" name="email" id="email">
        </div>
        <div class="form-group mb-3">
            <label for="password">Mật khẩu</label>
            <input type="password" class="form-control bg-primary" name="password" id="password">
        </div>
        <div class="form-group mt-3 ">
            <button type="submit" class="btn btn-danger px-4  py-2 text-white"> Login </button>
        </div>
    </form>
</div>